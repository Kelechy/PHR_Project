{
  "info": {
    "name": "PHR API Collection",
    "_postman_id": "5b7d9a10-efa1-4a41-9c1f-9c6f913a83d5",
    "description": "Sample API Requests for PHR Project (Auth, Patients, Roles, AccessRequests)"
  },
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": "{{baseUrl}}/api/auth/register",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"doctor@example.com\",\n  \"password\": \"StrongPass123!\",\n  \"fullName\": \"Dr. Ada Eze\"\n}"
            }
          }
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": "{{baseUrl}}/api/auth/login",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"doctor@example.com\",\n  \"password\": \"StrongPass123!\"\n}"
            }
          }
        }
      ]
    },
    {
      "name": "Patients",
      "item": [
        {
          "name": "Create Patient",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": "{{baseUrl}}/api/patients",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"firstName\": \"John\",\n  \"lastName\": \"Doe\",\n  \"age\": 43,\n  \"gender\": \"Male\",\n  \"diagnosis\": \"Hypertension\"\n}"
            }
          }
        },
        {
          "name": "Get Patient by ID",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": "{{baseUrl}}/api/patients/{{patientId}}"
          }
        },
        {
          "name": "Get All Patients",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": "{{baseUrl}}/api/patients"
          }
        },
        {
          "name": "Update Patient",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": "{{baseUrl}}/api/patients/{{patientId}}",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"age\": 44,\n  \"diagnosis\": \"Hypertension, improved\"\n}"
            }
          }
        },
        {
          "name": "Delete Patient",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": "{{baseUrl}}/api/patients/{{patientId}}"
          }
        }
      ]
    },
    {
      "name": "Roles",
      "item": [
        {
          "name": "Create Role",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": "{{baseUrl}}/api/roles",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Doctor\",\n  \"description\": \"Medical practitioner with patient access\"\n}"
            }
          }
        },
        {
          "name": "Assign Permissions",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": "{{baseUrl}}/api/roles/{{roleId}}/permissions",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"permissions\": [\n    \"createPatientRecords\",\n    \"viewPatientRecords\",\n    \"updatePatientRecords\"\n  ]\n}"
            }
          }
        },
        {
          "name": "Get All Roles",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": "{{baseUrl}}/api/roles"
          }
        }
      ]
    },
    {
      "name": "Access Requests",
      "item": [
        {
          "name": "Request Access",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": "{{baseUrl}}/api/accessrequests",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"patientId\": \"{{patientId}}\",\n  \"reason\": \"For medical review\"\n}"
            }
          }
        },
        {
          "name": "Approve Access Request",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": "{{baseUrl}}/api/accessrequests/{{requestId}}",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"Approved\"\n}"
            }
          }
        },
        {
          "name": "Get All Access Requests",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": "{{baseUrl}}/api/accessrequests"
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "https://localhost:5001"
    },
    {
      "key": "token",
      "value": ""
    },
    {
      "key": "patientId",
      "value": ""
    },
    {
      "key": "roleId",
      "value": ""
    },
    {
      "key": "requestId",
      "value": ""
    }
  ]
}
